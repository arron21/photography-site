<style>
  figure {
    overflow: hidden;
    aspect-ratio: 1 / 1;
    margin: 4px;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, 250px);
    justify-content: center;
  }
  .gallery img {
    filter: grayscale(1);
    width: 100%;
    object-fit: cover;
    height: 100%;
  }
  .gallery img:hover {
    filter: grayscale(0);

  }
  .gallery a {
      
    display: block;
  
  }
</style>


<section class="gallery">
  {% for image in collections.gallery %}
    <figure>
      <a href="{{image}}" class="" data-lightbox="arron">
        <img loading="lazy" src="/thumb{{image}}"/>
      </a>
    </figure>
  {% endfor %}
</section>

